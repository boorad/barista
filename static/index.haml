!!! Strict
%html
  %head
    %link( rel="stylesheet" type="text/css" href="styles/master.css" )
    %meta( http-equiv="X-UA-Compatible" content="chrome=1" )

    %title Barista Web Framework

  %body

    #root
      %a( href="#/" ) Home
      %a( href="#/setup" ) Set up
      %a( href="#/tutorial" ) Tutorial
      %a( href="#/reference" ) Reference
      %a( href="#/contribute" ) Contribute
      .o-default.on( source="home.html" )
      .o-setup.off( source="setup.html" )
      .o-tutorial.off( source="tutorial.html" )
      .o-reference.off( source="reference.html" )
      .o-contribute.off( source="contribute.html" )

  :javascript
    (function() {
      var js = document.createElement('script');
      js.type = 'text/javascript'; js.async = true; js.src = 'scripts/master.js';
      var s = document.getElementsByTagName('script')[0];
      s.parentNode.insertBefore(js, s);
    })();

